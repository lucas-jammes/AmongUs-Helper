        <Rectangle x:Name="TopBar"
                   HorizontalAlignment="Center"
                   Height="69"
                   Stroke="#FFFFFF"
                   StrokeThickness="1"
                   VerticalAlignment="Top"
                   Width="824"
                   Fill="Black"
                   Cursor="SizeAll"
                   MouseLeftButtonDown="TopBar_MouseLeftButtonDown"
                   Margin="0,-11,0,0"
                   Opacity="0.9">
            <Rectangle.Effect>
                <BlurEffect Radius="10"/>
            </Rectangle.Effect>
        </Rectangle>

        <!-- Title -->
        <Label Name="WindowTitle"
               Content="Sus Companion"
               HorizontalAlignment="Left"
               FontSize="32"
               VerticalAlignment="Top"
               Height="58"
               Width="143"
               Margin="10,0,0,0"/>

