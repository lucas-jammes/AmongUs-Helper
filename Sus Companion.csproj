  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <!-- Create a single file when publishing -->
  <PropertyGroup>
	<OutputType>WinExe</OutputType>
	<TargetFramework>net9.0-windows</TargetFramework>
	<UseWPF>true</UseWPF>
	<PublishSingleFile>true</PublishSingleFile>
	<SelfContained>true</SelfContained>
	<RuntimeIdentifier>win-x86</RuntimeIdentifier>
	<IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
  </PropertyGroup>
	
  <!-- Handle AssemblyInfo -->
  <PropertyGroup>
	<Company>Lucas Jammes</Company>
	<Product>Sus_Companion</Product>
	<AssemblyTitle>Sus_Companion</AssemblyTitle>
	<Authors>Lucas Jammes</Authors>
	<Copyright>Copyright © Lucas Jammes 2025</Copyright>
	<Version>1.7.0</Version>
	<FileVersion>1.7.0</FileVersion>
	<AssemblyVersion>1.7.0</AssemblyVersion>
	<InformationalVersion>1.7.0</InformationalVersion>
	<Description>Portable app to help AmongUs players!</Description>
  </PropertyGroup>
</Project>